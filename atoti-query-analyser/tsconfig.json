{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "src"
  ],
  "typedocOptions": {
    "entryPoints": [
      "src/"
    ],
    "entryPointStrategy": "expand",
    "plugin": [
      "typedoc-theme-hierarchy"
    ],
    "theme": "hierarchy",
    "out": "docs/api",
    "readme": "tsdoc.readme.md",
    "includes": "docs"
  }
}
